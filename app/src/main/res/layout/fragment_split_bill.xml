<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ehb.splitthebill.main.SplitBillFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_tv_lbl_total"
        android:id="@+id/tv_lbl_total"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_tv_lbl_tip"
        android:id="@+id/tv_lbl_tip"
        android:layout_below="@+id/tv_lbl_total"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_tv_lbl_persons"
        android:id="@+id/tv_lbl_persons"
        android:layout_below="@+id/tv_lbl_tip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_total"
        android:layout_below="@+id/tv_lbl_persons"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="133dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_subtotal"
        android:layout_above="@+id/tv_lbl_tip"
        android:layout_toRightOf="@+id/tv_lbl_total"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_alignRight="@+id/tv_total"
        android:layout_alignEnd="@+id/tv_total" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_tip"
        android:layout_above="@+id/tv_lbl_persons"
        android:layout_alignLeft="@+id/et_subtotal"
        android:layout_alignStart="@+id/et_subtotal"
        android:layout_alignRight="@+id/tv_total"
        android:layout_alignEnd="@+id/tv_total" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_party_size"
        android:layout_alignBottom="@+id/tv_lbl_persons"
        android:layout_alignLeft="@+id/et_tip"
        android:layout_alignStart="@+id/et_tip"
        android:layout_alignRight="@+id/tv_total"
        android:layout_alignEnd="@+id/tv_total" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_btn_calculate"
        android:id="@+id/btn_calc_total"
        android:layout_below="@+id/et_party_size"
        android:layout_marginTop="42dp"
        android:layout_alignLeft="@+id/et_party_size"
        android:layout_alignStart="@+id/et_party_size"
        android:layout_alignRight="@+id/et_party_size"
        android:layout_alignEnd="@+id/et_party_size" />
</RelativeLayout>
